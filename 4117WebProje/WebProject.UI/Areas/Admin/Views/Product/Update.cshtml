
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@model ProductVM

@using (Html.BeginForm("Update", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

    <input type="hidden" value="@Model.ID" name="ID"/>

    <div class="form-group">
        @Html.LabelFor(x => x.UnitsInStock)
        @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Price)
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Alt Kategori Seçiniz</label>
        <select class="form-control" name="SubCategoryID">
            @foreach (var item in Model.AltKategoriler)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>

    <input type="hidden" name="ImagePath" value="@Model.ImagePath"/>

    <div class="form-group">
        <label>Resim :</label>
        <input type="file" name="Image" class="form-control" />
    </div>

    <input type="submit" class="form-control btn btn-primary" value="Güncelle" />
}




