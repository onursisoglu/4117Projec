
@{
    ViewBag.Title = "Update";
}

@model SubCategoryVM

<h2>Update</h2>

<form action="/Admin/SubCategory/Update" method="post">
    <div class="form-group">
        <label>Alt Kategori İsmi</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Alt Kategori Açıklaması</label>
        <input type="text" name="Description" value="@Model.Description" class="form-control" />
    </div>

    <input type="hidden" value="@Model.ID" name="ID"/>

    <div class="form-group">
        <label>Ana Kategori Seçiniz</label>
        <select class="form-control" name="CategoryID">
            @foreach (var item in Model.KatListesi)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>

    <input type="submit" value="Güncelle" class="btn btn-primary form-control" />

</form>

