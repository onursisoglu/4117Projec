

@model List<Category>

<div class="side-menu animate-dropdown outer-bottom-xs">
    <div class="head">
        <i class="icon fa fa-align-justify fa-fw">Kategoriler</i>
    </div>

    <nav class="yamm megamenu-horizontal">
        <ul class="nav">
            @foreach (var anaKat in Model)
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon fa fa-shopping-bag" aria-hidden="true"></i>
                        @anaKat.Name
                    </a>

                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            <div class="row">
                                <div class="col-md-5 col-lg-5 col-sm-12 col-xs-12">
                                    <ul class="links list-unstyled">
                                        <li>
                                            <ul class="links list-unstyled">
                                                @foreach (var altKat in anaKat.SubCategories)
                                                {
                                                    <li>
                                                        <a href="@Url.Action("GetProducts","Product",new { id=altKat.ID})">@altKat.Name</a>
                                                    </li>
                                                }
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>


                </li>
            }
        </ul>
    </nav>

</div>
