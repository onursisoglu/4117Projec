
@model List<WebProject.UI.Models.Sepet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layoutum.cshtml";
}



@if (Model!=null)
{
<table class="table table-striped">
    <tr>
        <th>Ürün Adı</th>
        <th>Fiyatı</th>
        <th>Adet</th>
        <th>Ürün Görseli</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UrunAdi</td>
            <td>@item.Fiyati</td>
            <td>@item.Adet</td>
            <td><img  src="@item.ImagePath" style="height:60px;width:60px;"/></td>
        </tr>
    }
</table>
}
else
{
        <div class="alert alert-danger">Sepetinize ürün eklememişsiniz.</div>
}
